# Copy this file to .env.local for local development
# For Vercel deployment, add these variables in Vercel Dashboard > Settings > Environment Variables

# GitHub API Configuration
# Get from: https://github.com/settings/tokens
# Required scopes: read:user, public_repo
GITHUB_READ_USER_TOKEN_PERSONAL=ghp_your_github_token_here

# Monkeytype API Configuration  
# Get from: https://monkeytype.com/settings/developer
MONKEYTYPE_API_KEY=your_monkeytype_api_key_here

# Google Gemini AI Configuration
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Domain Configuration
# Replace with your actual domain
DOMAIN=https://ahmadmasum23.vercel.app

# Optional: Next.js Configuration
NEXT_PUBLIC_VERCEL_ENV=production